package com.example.fw;

import org.openqa.selenium.By;
import org.openqa.selenium.support.ui.Select;

import com.example.tests.ContactData;
import com.example.tests.SelectContactData;
import com.example.tests.TestBase;

public class ContactHelper extends HelperBase{

	public ContactHelper(ApplicationManager manager) {
		super(manager);
	}

	public void InitNewContactCreation() {
		manager.driver.findElement(By.linkText("add new")).click();
	}

	public void fillContactCreationForm(ContactData contact) {
		manager.driver.findElement(By.name("firstname")).clear();
	    manager.driver.findElement(By.name("firstname")).sendKeys(contact.firstName);
	    manager.driver.findElement(By.name("address")).clear();
	    manager.driver.findElement(By.name("address")).sendKeys(contact.lastName);
	    manager.driver.findElement(By.name("home")).clear();
	    manager.driver.findElement(By.name("home")).sendKeys(contact.homePhone);
	    manager.driver.findElement(By.name("mobile")).clear();
	    manager.driver.findElement(By.name("mobile")).sendKeys(contact.mobilePhome);
	    manager.driver.findElement(By.name("work")).clear();
	    manager.driver.findElement(By.name("work")).sendKeys(contact.workPhone);
	    manager.driver.findElement(By.name("email")).clear();
	    manager.driver.findElement(By.name("email")).sendKeys(contact.mail);
	    manager.driver.findElement(By.name("email2")).clear();
	    manager.driver.findElement(By.name("email2")).sendKeys(contact.mail2);
	    manager.driver.findElement(By.name("byear")).clear();
	    manager.driver.findElement(By.name("byear")).sendKeys(contact.year);
	    manager.driver.findElement(By.name("address2")).clear();
	    manager.driver.findElement(By.name("address2")).sendKeys(contact.address);
	    manager.driver.findElement(By.name("phone2")).clear();
	    manager.driver.findElement(By.name("phone2")).sendKeys(contact.home);
	}

	public void selectContactDetailsFromContactCreationForm(ApplicationManager applicationManager, TestBase testBase, SelectContactData select) {
		new Select(manager.driver.findElement(By.name("bday"))).selectByVisibleText(select.day);
	    new Select(manager.driver.findElement(By.name("bmonth"))).selectByVisibleText(select.month);
	    new Select(manager.driver.findElement(By.name("new_group"))).selectByVisibleText(select.group);
	}

	public void reternToMainPage() {
		manager.driver.findElement(By.name("submit")).click();
	    manager.driver.findElement(By.linkText("home page")).click();
	}

}
