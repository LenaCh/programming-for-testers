package com.example.fw;

import java.util.ArrayList;
import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;

import com.example.tests.GroupData;

public class GroupHelper extends HelperBase{

	private String title;

	public GroupHelper(ApplicationManager manager) {
		super(manager);
	  }

	public void initGroupCreation() {
		click(By.name("new"));
	  }

	public void submitGroupCriation() {
		click(By.name("submit"));
	  }

	public void fillGroupForm(GroupData group) {
		type(By.name("group_name"), group.name);
		type(By.name("group_header"), group.header);
		type(By.name("group_footer"), group.footer);
	   
	  }

	public void returnToGroupsPage() {
		click(By.linkText("group page"));
	  }

	public void deleteGroup(int index) {
		selectGroupByIndex(index);
		click(By.name("delete"));
		
	}

	public void initGroupModifacaton(int index) {
		selectGroupByIndex(index);
		click(By.name("edit"));
	}

	public void submitGroupModifacaton() {
		click(By.name("update"));
	}

	public List<GroupData> getGroups() {
	List<GroupData>  groups = new ArrayList<GroupData>();
	    List<WebElement> checkboxes = driver.findElements(By.name("selected[]"));
		for (WebElement checkbox : checkboxes) {
        GroupData group = new GroupData();
        title = checkbox.getAttribute(title);
        group.name = title.substring("Selected (".length(), title.length() - ")".length());
        groups.add(group);
}
	    return groups;
	}


}
